extends auth

block auth
  form.signup.form-horizontal(ng-submit="signup()", method='post')
    .control-group
      label.control-label(for='name') Full name
      .controls
        input#name(type='text', name='name', placeholder='Full name', ng-model="fullname")

    .control-group
      label.control-label(for='email') Email
      .controls
        input#email(type='email', name='email', placeholder='Email', ng-model="email")

    .control-group
      label.control-label(for='username') Username
      .controls
        input#username(type='text', name='username', placeholder='Username', ng-model="username")

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name='password', ng-model="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href='/sign-in',ng-submit="signup()",) login