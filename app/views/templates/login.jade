
block auth
  form.signin.form-horizontal(ng-submit="login()", method='post')
    p.error() {{error}}
    .control-group
      label.control-label(for='email') Email
      .controls
        input#email(type='email', name='email', placeholder='Email', ng-model="email", required)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name='password', placeholder='Password', ng-model="password", required)

    .form-actions
      button.btn.btn-primary(type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.show-signup(href='/sign-up') Sign up