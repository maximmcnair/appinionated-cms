header.header-main
  .wrapper
    h1.header__title Appinionated
    strong(ng-click="triggerAddReviewWidget").header__review-add Add Review

section(ng-if="showAddReviewWidget")
  .wrapper
    form.review__details
      input(ng-model="newReview.title", placeholder="Title").review__title__input
      .review__details__row
        .review__details__desc
          textarea(ng-model="newReview.review", placeholder="Review").review__details__review
        .review__details__details
          label
            strong App Store Link:
            input(type="text", ng-model="newReview.hrefStore")
          label
            strong Background Color:
            input(type="text", ng-model="newReview.colorBg")
          label
            strong Text Color:
            input(type="text", ng-model="newReview.colorText")
      .review__details__row
        a(ng-click="saveReview(review)").review__details__save Save

section
  article(ng-repeat="review in reviews", ng-click="openRAP(review)", ng-class="{'review--open':isSelected(review)}").review
    .review__preview(style="background-color: #{{review.colorBg}}; color: #{{review.colorText}};")
      .wrapper
        h2(ng-bind="review.title").review__title
    .wrapper
      form.review__details
        .review__details__row
          .review__details__desc
            textarea(ng-model="review.review").review__details__review
          .review__details__details
            label
              strong App Store Link:
              input(type="text", ng-model="review.hrefStore")
            label
              strong Background Color:
              input(type="text", ng-model="review.colorBg")
            label
              strong Text Color:
              input(type="text", ng-model="review.colorText")
        .review__details__row
          a(ng-click="updateReview(review)").review__details__update Update