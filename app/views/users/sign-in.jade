extends auth

block auth
  form(action='/auth/log-in', method='post').login-form.js-login-form
    h2.title--centered Appinionated Login
    label(for='email').form-label
      input(type="text", name="email", placeholder="Email", tabindex="1").input-top.js-login-email
      i.fa.fa-user
    label(for='password').form-label
      input(type="password", name="password", placeholder="Password", tabindex="2").input-btm.js-login-password
      i.fa.fa-key
    button(type='submit').btn Login