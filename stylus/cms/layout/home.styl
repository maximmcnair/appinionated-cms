.review__preview
  padding 20px 0px
  transition background-color .3s
  margin-bottom 20px
  cursor pointer

.review__title
  margin 0px



.review-add
  height 0px
  transition height .3s
  overflow hidden

.review-add--open
  height (94 + 455)px



.review
  transition height .3s
  overflow hidden
  height 94px
  display block

.review--open
  height (94 + 700)px

.review__details
  height 700px

.review__title__input
  font-size 45px
  font-weight 800
  @extends .input-clear
  padding 0px
  margin 0
  width 100%
  &:focus
    background-color transparent

.review__details__row
  clearfix()

.review__details__desc
  width responsive(540, 940)
  float left

.review__details__details
  // margin-top (37+15)px
  width responsive(300, 940)
  float right

.review__details__save
.review__details__update
  @extends .btn-lrg
  float right
  margin 0

.review__images
  margin-bottom 15px

.review__images__drop
  border 2px dashed #ffffff
  width 150px
  padding 122px 0px
  display block
  text-align center
  background-color #1B2734
  transition transform .3s
  &.dragover
    border-color #A5D79E
    transform scale(1.1, 1.1)

.review__images__col
  float left
  margin-right 15px
  width 150px

.review__details__review
  width 100%
  max-width 100%
  min-height 250px
  max-height 250px

.ta-editor
  width 100%
  max-width 100%
  min-height 250px
  max-height 250px
  margin-top 15px
  p
    margin-top 0px
