//==============================================================================

// Title:
// Buttons

// Description:
// General website buttons.

//==============================================================================
a.btn,
.btn
button
  font-family $primaryTypeface
  user-select(none)
  padding 7px 20px
  border-radius 4px
  display inline-block
  background-color #233445
  color #ffffff
  font-size 14px
  font-weight 800
  border 1px solid #ffffff
  transition all .3s
  cursor pointer
  margin-right 10px
  &:hover
    background-color #ffffff
    color #233445
  &:focus
    outline 0
    box-shadow 0

.btn-lrg
  @extends .btn
  padding 15px 30px
  font-size 14px
  margin-right 0px