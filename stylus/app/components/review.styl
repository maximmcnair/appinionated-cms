@media screen and (max-width: 700px)
  .review__image__wrapper
    display block
    margin 0 auto 25px auto
    width 182px

@media screen and (min-width: 700px)
  // @media screen and (min-width: 1037px)
  .review__images
    width responsive(460, 940)
    margin 0 responsive(20, 940) 0 0
    float left

  .review__desc
    width responsive(460, 940)
    float right
    margin 0
    p
      max-width 500px

  .review:nth-of-type(2n)
    .review__images
      float right
      margin 0
    .review__desc
      float left
      margin 0 responsive(20, 940) 0 0

  .review--landscape
    padding 300px 0px

  .review--portrait
    h2
      margin-top 90px


.review--portrait
  .review__image__wrapper
    background-image url('/imgs/phone-portrait-white.png')
    background-size contain
    width 230px
    height 500px
    margin 0 auto
  &.review--phone--dark
    .review__image__wrapper
      background-image url('/imgs/phone-portrait-black.png')
  .slides
    width 205px
    height 394px
    padding-top 70px
    padding-left 23px
    img
      width 100% !important


