.review
  display block
  overflow hidden
  padding 50px 0px
  p
    font-size 17px
    line-height 25px

.review--text--dark
  color #454545
  a
    color #454545
    font-style italic

.review--text--light
  color #ffffff
  a
    color #ffffff
    font-style italic
  a.btn
  .btn
    background-color rgba(350, 350, 350, 0.6)
    &:hover
      background-color rgba(350, 350, 350, 0.8)

.flex-control-nav
.flex-direction-nav
  display none

.slides
  overflow hidden
  list-style-type none
  padding 0
  margin 0
  li
    padding 0
    margin 0
