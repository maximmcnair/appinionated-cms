//==============================================================================

// Title:
// Forms

// Description:
// Base styling for input forms.

//==============================================================================

.input-clear
  outline 0
  border 0px
  background transparent

.list-no-style
  list-style-type none
  margin 0
  padding 0

.form-err
  display none

textarea
input
  box-sizing(border-box)
  font-size 18px
  line-height 26px
  font-family $primaryTypeface
  color #ffffff
  @extends .input-clear
  background #1b2734
  padding 10px
  border-radius 3px

.ta-editor
  background #1b2734
  padding 10px
  border-radius 3px

label
  margin-bottom 25px
  display block
  clearfix()
  strong
    display block
  input
    font-size 14px
    display block
    width 100%

::-webkit-input-placeholder
  color #ffffff
:-moz-placeholder
  color #ffffff
::-moz-placeholder
  color #ffffff
:-ms-input-placeholder
  color #ffffff

input[type=checkbox]
  -webkit-transition all .3s ease-in
  -webkit-appearance none
  background #FF8080
  width 31px
  height 31px
  border-radius 50%
  position relative
  display inline-block
  line-height 18px
  &:before
    font-family FontAwesome
    content '\f00d'
    position absolute
    top 7px
    left 10px
  &:checked
    background #A5D79E
  &:checked:before
    content '\f00c'
    left 9px

.checkbox
  strong
    vertical-align: 13px;
    margin-left: 8px;
    display inline